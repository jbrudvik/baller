#!/usr/bin/env bash

shopt -s nullglob
shopt -s dotglob

dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

for f in "${dir}/files/"*; do
  filename="$(basename "${f}")"
  installed_file="${HOME}/${filename}"

  if [ -e "${installed_file}" ] || [ -h "${installed_file}" ]; then
    rm "${installed_file}" && echo "Removed ${installed_file}"
  fi
done

restore="${dir}/restore"
source "${restore}"
