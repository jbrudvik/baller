#!/usr/bin/env bash

shopt -s nullglob
shopt -s dotglob

self="${BASH_SOURCE[0]}"
dir="$(cd "$(dirname "${self}")" && pwd)"
script="$(basename "${self}")"
hooks="${dir}/hooks"

pre="${hooks}/pre-${script}"
if [ -f "${pre}" ]; then
  source "${pre}"
fi

for f in "${dir}/files/"*; do
  filename="$(basename "${f}")"
  installed_file="${HOME}/${filename}"

  if [ -e "${installed_file}" ] || [ -h "${installed_file}" ]; then
    rm "${installed_file}" && echo "Removed ${installed_file}"
  fi
done

post="${hooks}/post-${script}"
if [ -f "${post}" ]; then
  source "${post}"
fi

source "${dir}/restore"
